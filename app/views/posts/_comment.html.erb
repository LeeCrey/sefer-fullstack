<% txt_class="block mx-4 p-2.5 w-full resize-none text-sm text-gray-900 bg-surface rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>

<div class="mx-auto absolute bottom-0 w-full max-w-xl">
  <%= form_for(:comment, url: posts_path(thread_id: @post.id)) do |f| %>
    <div class="flex items-center py-2 px-3 bg-onSurface dark:bg-dark-onSurface">
      <button type="button" class="bx bxs-image bx-sm inline-flex justify-center p-2 text-gray-500 rounded-lg cursor-pointer hover:text-gray-900 hover:bg-windows dark:text-gray-400 dark:hover:text-white dark:hover:bg-gray-600"></button>
      <button type="button" class="p-2 text-gray-500 rounded-lg cursor-pointer hover:text-gray-900 hover:bg-windows dark:text-gray-400 dark:hover:text-white dark:hover:bg-gray-600">
      	<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
      		<path fill-rule="evenodd"
      			d="M10 18a8 8 0 100-16 8 8 0 000 16zM7 9a1 1 0 100-2 1 1 0 000 2zm7-1a1 1 0 11-2 0 1 1 0 012 0zm-.464 5.535a1 1 0 10-1.415-1.414 3 3 0 01-4.242 0 1 1 0 00-1.415 1.414 5 5 0 007.072 0z"
      			clip-rule="evenodd"></path>
      	</svg>
      </button>
      <%= f.text_area :content, rows: "1", class: txt_class, placeholder: "Comment"  %>
      <button type="submit" class="inline-flex justify-center bx bx-send bx-sm p-2 text-blue-600 rounded-full cursor-pointer hover:bg-windows dark:text-blue-500 dark:hover:bg-gray-600"></button>
    </div>
  <% end %>
</div>
