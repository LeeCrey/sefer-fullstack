<%= content_for :title_section do %>
  <title>New Post</title>
<% end %>

<div class="w-full h-full flex flex-col sm:flex-row mx-auto">
  <div class="p-2 shadow flex justify-start items-center bg-surface dark:bg-dark-surface text-txtPrimary dark:text-dark-txtPrimary" data-controller="application">
    <span class="bx bx-arrow-back bx-sm p-1" data-action="click->application#redirectBack"></span>
    <span class="font-semibold ml-1">New Post</span>
  </div>

  <main class="h-full w-full">
    <section class="w-full">
      <%= render "posts/form", { method: @method } %>
    </section>
  </main>
</div>
