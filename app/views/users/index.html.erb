<%= content_for :title_section do %>
  <title>Find Friends</title>
<% end %>

<div class="relative h-full flex flex-col sm:flex-row" data-controller="sidebar">
  <%= render "shared/nav", { w: "", user: nil } %>

  <main class="main-container overflow-y-auto flex-1 sm:mx-2 md:mx-6" data-sidebar-target="container">
    <section class="h-full w-full max-w-xl overflow-y-auto">
      <% if @users.present? %>
        <div class="mx-1 mt-1">
          <%= turbo_frame_tag "result" do%>
            <%= render @users, { follows: false, online: false } %>
            <div class="mr-2 mt-1">
              <%= render "users/next", { pagy: @pagy, next_url: @next_url, prev_url: @prev_url } %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="h-full flex items-center justify-center">
          <span class="text-txtSecondary dark:text-dark-txtSecondary text-md">Nothing to show!.</span>
        </div>
      <% end %>
    </section>
  </main>

  <%= render "shared/sm_side" %>
</div>
