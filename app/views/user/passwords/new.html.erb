<%= content_for :title_section do %>
  <title>Forgot your password?</title>
<% end %>

<% input_class="w-full rounded-[4px] bg-surface dark:bg-dark-surface text-txtSecondary dark:text-dark-txtSecondary p-3 border border-windows dark:border-dark-onSurface hover:border-primary dark:hover:border-dark-primary" %>
<% check_box = "bg-surface dark:bg-dark-onSurface border border-windows dark:border-dark-windows checked:bg-primary dark:checked:bg-dark-primary" %>

<div class="flex flex-col items-center justify-center h-screen p-1" data-controller="application">
  <div class="flex flex-col h-full sm:h-auto bg-surface dark:bg-dark-surface shadow dark:shadow-none px-4 sm:px-6 md:px-8 lg:px-10 py-8 rounded-md w-full max-w-md">
    <span class="bx bx-arrow-back bx-sm text-link dark:text-dark-link p-1 hover:cursor-pointer mb-3" data-action="click->application#redirectBack"></span>

    <div class="flex item-center justify-center mb-10">
      <span class="bx bx-shield-quarter bx-lg bg-onSurface dark:bg-dark-onSurface p-4 rounded-full text-link dark:text-dark-link"><span>
    </div>

    <h1 class="font-semibold text-xl text-txtPrimary dark:text-dark-txtPrimary">Forgot your password?</h1>
    <p class="text-txtSecondary"><%= t("instruction", operation: "password reset") %></p>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="mt-6 mb-4">
        <%= f.text_field :email, class: input_class, placeholder: "Email", required: true %>
      </div>
      <button class="mt-5 w-full p-2 font-semibold bg-primary dark:bg-dark-primary text-onPrimary dark:text-dark-onPrimary rounded-[4px]" type="submit">Send</button>
    <% end %>

    <div class="mt-5">
      <div class="account-locked flex items-center justify-center">
        <span class="text-txtSecondary mr-1">Account Locked? </span>
        <%= link_to "Unlock", new_unlock_path(resource_name), class: "text-link dark:text-dark-link text-sm" %>
      </div>
    </div>
  </div>
</div>
